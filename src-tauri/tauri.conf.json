{
	"$schema": "https://schema.tauri.app/config/2",
	"productName": "Megashell",
	"version": "0.1.0",
	"identifier": "com.khoixvu.Megashell",
	"build": {
		"beforeDevCommand": "bun run dev",
		"devUrl": "http://localhost:1420",
		"beforeBuildCommand": "bun run build",
		"frontendDist": "../dist"
	},
	"app": {
		"windows": [
			{
				"title": "Megashell",
				"width": 800,
				"height": 600,
				"decorations": false,
				"transparent": true,
				"windowEffects": {
					"effects": ["acrylic"],
					"state": "active",
					"color": null
				}
			}
		],
		"security": {
			"csp": null
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
